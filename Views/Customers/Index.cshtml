@model IEnumerable<Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customers</h1>

@Html.ActionLink("New", "New", "Customers", null, new { @class = "btn btn-default my-3" })
<table class="table table-hover" id="customersTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Membership
            </th>
            <th></th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Details", "Customers", new { id = item.Id }, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MembershipType.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Customers", new { id = item.Id }, null)
                </td>
                <td>
                    <button class="btn-link js-deleteBtn" data-customer-id ="@item.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{ 
<script>
    $(document).ready(function () {
        $('#customersTable .js-deleteBtn').click(function () {
            var button = $(this);
            if (confirm("Are you sure you want to delete this customer?")) {
                $.ajax({
                    url: "api/customers/" + button.attr("data-customer-id"),
                    method: "DELETE",
                    success: function () {
                        button.parents("tr").remove();
                    }
                });
            }
        });
    });
</script>
}
