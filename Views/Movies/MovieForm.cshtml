@model MovieFormViewModel

@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h1>@Model.Title</h1>

<hr />
@using (Html.BeginForm("Save", "Movies"))
{
    @Html.ValidationSummary(true, "Please, fix the missing information!")
    <div class="form-group">
        @Html.LabelFor(m => m.Name)*
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m =>m.Name, "", new { @class="text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ReleaseDate)*
        @Html.TextBoxFor(m => m.ReleaseDate, "{0: dd MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ReleaseDate, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NumberInStock)*
        @Html.TextBoxFor(m => m.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NumberInStock, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.GenresList)*
        @Html.DropDownListFor(m => m.GenreId, new SelectList(Model.GenresList, "Id", "Name"), "Select a Genre", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.GenreId)
    </div>
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken();
    <button type="submit" class="btn btn-lg btn-primary my-2">Submit</button>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>

